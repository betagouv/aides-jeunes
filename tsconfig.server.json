{
  "parserOptions": {
    "sourceType": "module"
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist-server",
    "baseUrl": ".",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "resolveJsonModule": true
  },

  "include": [
    "*.ts",
    "backend/**/*.ts",
    "backend/**/*.d.ts",
    "lib/**/*.ts",
    "lib/**/*.d.ts"
  ],
  "exclude": ["node_modules", "src", "contribuer", "tools"]
}
