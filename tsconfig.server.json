{
  "parserOptions": {
    "sourceType": "module"
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist-server",
    "baseUrl": ".",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [],
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["lib/*"],
      "@data/*": ["data/*"],
      "@backend": ["backend/*"]
    }
  },
  "resolve": {
    "extensions": [".cjs", ".ts", ".js", ".json"]
  },
  "include": [
    "./backend/configure.ts",
    "./mock.ts",
    "./backend/server.ts",
    "backend/**/*.ts",
    "backend/**/*.d.ts",
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "data/**/*.ts",
    "data/**/*.d.ts",
    "tools/**/*.ts",
    "tools/**/*.d.ts"
  ],
  "exclude": ["node_modules", "tests", "dist-server", "dist"]
}
